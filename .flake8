[flake8]
max-line-length = 88
extend-ignore = E203,W503,E501
exclude =
    .git,
    __pycache__,
    .pytest_cache,
    .mypy_cache,
    build,
    dist,
    *.egg-info,
    .venv,
    venv,
    .tox
per-file-ignores =
    __init__.py:F401,F403
    */migrations/*:E501,F401
    */tests/*:S101,D100,D101,D102,D103
